{
	"posParam1": {
		"type": "positionParam",
		"name": "[FILE_1 .. [FILE_N]]",
		"help": "Optional Name(s) of File(s) to process"
	},
	"average": {
		"type": "optFlg",
		"default": "true",
		"short": "A",
		"long": "average",
		"help": "...... disable Arithmetic Mean (i.e. average ) output."
	},
	"column_separator": {
		"type": "optChr",
		"default": ",",
		"short": "C",
		"long": "column_separator",
		"help": "CHR .. use CHR, not comma as the column separator"
	},
	"comment_delimiter": {
		"type": "optChr",
		"default": "#",
		"short": "c",
		"long": "comment_delimiter",
		"help": "CHR .. use CHR, not hash as the comment delimiter"
	},
	"debug": {
		"type": "optFlg",
		"default": "false",
		"short": "D",
		"long": "debug",
		"help": "...... enable debug output mode"
	},
	"decimal_places": {
		"type": "optInt",
		"default": 16,
		"short": "d",
		"long": "decimal_places",
		"most_pos_limit": 30,
		"most_neg_limit": 0,
		"help": "INT .. provide INT decimal places on output stats - where 0 <= INT <= 30"
	},
	"header": {
		"type": "optFlg",
		"default": "false",
		"short": "H",
		"long": "header",
		"help": "...... enable Header output mode"
	},
	"help": {
		"type": "optFlg",
		"default": "false",
		"short": "h",
		"long": "help",
		"help": "...... this help / usage information"
	},
	"median": {
		"type": "optFlg",
		"default": "true",
		"short": "M",
		"long": "median",
		"help": "...... disable Median value output"
	},
	"negetive": {
		"type": "optFlg",
		"default": "true",
		"short": "N",
		"long": "negetive",
		"help": "...... disable most Negetive value output"
	},
	"newline": {
		"type": "optFlg",
		"default": "false",
		"short": "n",
		"long": "newline",
		"help": "...... enable extra blank output lines"
	},
	"output": {
		"type": "optStr",
		"default": "",
		"short": "o",
		"long": "output_file",
		"help": "TXT .. send the output to a file named 'TXT'"
	},
	"positive": {
		"type": "optFlg",
		"default": "true",
		"short": "P",
		"long": "positive",
		"help": "...... disable most Positive value output"
	},
	"pearson": {
		"type": "optFlg",
		"default": "true",
		"short": "p",
		"long": "pearson",
		"help": "...... disable Pearson's skew value output"
	},
	"range": {
		"type": "optFlg",
		"default": "true",
		"short": "R",
		"long": "range",
		"help": "...... disable Range (i.e. most Pos - most Neg) value output"
	},
	"row": {
		"type": "optFlg",
		"default": "false",
		"short": "r",
		"long": "row",
		"help": "...... enable output in Row format"
	},
	"stddev": {
		"type": "optFlg",
		"default": "true",
		"short": "S",
		"long": "stddev",
		"help": "...... disable Standard Deviation value output"
	},
	"skip": {
		"type": "optInt",
		"default": 0,
		"short": "s",
		"long": "skip",
		"most_pos_limit": 1000,
		"most_neg_limit": 0,
		"help": "INT .. skip INT lines at the start of data sources - where 0 <= INT <= 1000"
	},
	"version": {
		"type": "optFlg",
		"default": "false",
		"short": "V",
		"long": "version",
		"help": "...... enable version information output"
	},
	"verbose": {
		"type": "optFlg",
		"default": "false",
		"short": "v",
		"long": "verbose",
		"help": "...... enable more verbose information output"
	}
}
